{
  "description": "Common schemas shared across all domains",
  "schemas": {
    "Notificationsettingsrequest": {
      "title": "Notificationsettingsrequest",
      "type": "object",
      "properties": {
        "new-issues-remediations": {
          "$ref": "#/components/schemas/Newissuesnotificationsettingrequest"
        },
        "project-imported": {
          "$ref": "#/components/schemas/Simplenotificationsettingrequest"
        },
        "test-limit": {
          "$ref": "#/components/schemas/Simplenotificationsettingrequest"
        },
        "weekly-report": {
          "$ref": "#/components/schemas/Simplenotificationsettingrequest"
        },
        "request-updates": {
          "required": [
            "enabled"
          ],
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Whether Ignore Approval Workflow Request Update notifications should be sent",
              "example": true
            }
          }
        },
        "pending-requests": {
          "required": [
            "enabled"
          ],
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Whether Ignore Approval Workflow Pending Requests notifications should be sent",
              "example": true
            }
          }
        }
      }
    },
    "Notificationsettingsresponse": {
      "title": "Notificationsettingsresponse",
      "type": "object",
      "properties": {
        "new-issues-remediations": {
          "$ref": "#/components/schemas/Notificationsettingresponse"
        },
        "project-imported": {
          "$ref": "#/components/schemas/Simplenotificationsettingresponse"
        },
        "test-limit": {
          "$ref": "#/components/schemas/Simplenotificationsettingresponse"
        },
        "weekly-report": {
          "$ref": "#/components/schemas/Simplenotificationsettingresponse"
        },
        "request-updates": {
          "$ref": "#/components/schemas/Simplenotificationsettingresponse"
        },
        "pending-requests": {
          "$ref": "#/components/schemas/Simplenotificationsettingresponse"
        }
      }
    }
  }
}